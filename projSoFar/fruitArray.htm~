  var myListString = "Apple, 0.99, bananaa, 0.50, peach, 0.25, orange, 0.75";
  var theRegExp = /[^a-z]+/i;
  var myFruitArray = myListString.split(theRegExp);
  document.write(myFruitArray.join("<br />"));

